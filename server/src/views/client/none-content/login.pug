extends ../_default/base.pug

block main
  .container.flex.flex-center
    .col-2
      h1.heading.heading-section.text-center= title
      .form-control.form-group
        .flex
          +imageTemplate('/img/logo-fb.svg', 'icon mr-06', 'Facebook', '24', '24')
          a(href="/auth/facebook") Login with Facebook
      .form-control.form-group
        .flex
          +imageTemplate('/img/logo-tw.svg', 'icon mr-06', 'Twitter', '24', '24')
          a(href="/auth/twitter") Login with Twitter
      .form-control.form-group
        .flex
          +imageTemplate('/img/logo-gg.svg', 'icon mr-06', 'Google', '24', '24')
          a(href="/auth/google") Login with Google
      .flex
        span.divider
        span.divider-text OR
        span.divider

      form(method="POST")
        input(
          name="email",
          type="email",
          class="form-control",
          placeholder="Email address"
        )

        input(
          name="password",
          type="password",
          class="form-control",
          placeholder="Password"
        )

        button(type="submit", class="form-control btn btn-login btn-primary") Login
