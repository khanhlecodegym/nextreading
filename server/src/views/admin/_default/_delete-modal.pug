div(
  class="modal fade"
  id="deleteConfirmModal",
  tabindex="-1",
  role="dialog",
  aria-labelledby="deleteConfirmModalLabel",
  aria-hidden="true"
)
  .modal-dialog
    .modal-content
      .modal-header
        h5.modal-title#deleteConfirmModalLabel Confirm Delete
        button(
          type="button",
          class="close",
          data-dismiss="modal",
          aria-label="Close"
        )
          span(aria-hidden="true") &times;
      .modal-body
        p You are about to delete item:&nbsp;
          strong#itemName
        p.text-warning Warning: this cannot be undone.
      .modal-footer
        button(
          type="button",
          class="btn btn-secondary",
          data-dismiss="modal"
        ) Close

        -if (data && data.id)
          //- Detail page
          a(
            href=`${entity}/${data.id}/delete`,
            class="btn btn-danger",
          )
            i.fa.fa-trash-o.fa-lg.mr-2
            | Delete #{data.id}
        -else
          //- Listing page
          button(
            type="button",
            id="btn-execute-delete",
            class="btn btn-danger",
          )
            i.fa.fa-trash-o.fa-lg.mr-2
            | Delete
